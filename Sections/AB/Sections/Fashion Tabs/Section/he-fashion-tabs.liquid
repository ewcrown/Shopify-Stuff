{% style %}
.he-fashion-tabs-wrap .tablinks.active::after {
  opacity: 1;
  width: 100%;
}
.he-fashion-tabs-wrap .tablinks::after {
  content: '';
  background: #000;
  position: absolute;
  height: 1px;
  left: 0px;
  bottom: 0px;
  width: 0%;
  opacity: 0;
  transition: width 1s;
}
.he-fashion-tabs-wrap .tablinks {
  position: relative;
}
.he-fashion-tabs-wrap .tab {
  border-bottom: 1px solid #ccc;
  background-color: #fff;
  display: flex;
  justify-content: center;
  gap: 20px;
  margin-bottom: 30px;
}
.he-fashion-tabs-wrap .tab button {
  background-color: #fff;
  border: none;
  padding: 14px 50px;
  transition: 0.3s;
  text-transform: uppercase;
  letter-spacing: 2px;
  font-size: 16px;
  line-height: 1.5;
  font-weight: 600;
  cursor: pointer;
  opacity: 0.7;
}

.he-fashion-tabs-wrap .tab button:hover,
.he-fashion-tabs-wrap .tab button.active {
  opacity: 1;
}

.tabcontent {
  display: none;
  border-top: none;
}

.he-fashion-tabs-row {
  padding: 30px 0px 120px;
}

.he-fashion-tabs-wrap > h3 {
  font-size: 32px;
  text-align: center;
  margin-bottom: 15px;
}

.he-fashion-panel {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20px;
}

.he-fashion-product {
  box-shadow: rgb(211, 212, 213) 0px 6px 18px -4px;
}

.he-fashion-product-box-top {
  position: relative;
  cursor: pointer;
}
.he-fashion-product-box-top:hover .he-fasion-product-buttons-wrap {
  display: flex;
}
.he-fasion-product-buttons-wrap {
  position: absolute;
  top: 0;
  left: 0;
  display: none;
  align-items: center;
  justify-content: center;
  flex-wrap: nowrap;
  width: 100%;
  height: 100%;
  flex-direction: column;
  gap: 10px;
  transition: all 0.3s ease;
}

.he-fasion-product-buttons-wrap a {
  width: 30rem;
  z-index: 9;
}

.he-fasion-product-buttons-wrap:before {
  content: '';
  position: absolute;
  width: 100%;
  height: 100%;
  background: #3333338c;
  left: 0;
  top: 0;
}

.he-fashion-product-box-bottom {
  padding: 18px 30px;
}

.he-fashion-product-box-bottom h3 {
  text-align: left;
  font-size: 22px;
  border-bottom: 1px solid #ccc;
  margin-bottom: 10px;
  padding-bottom: 10px;
}

.he-fashion-product-info span {
  font-weight: 400;
  line-height: 1.43;
  font-size: 14px;
  letter-spacing: 0.4px;
  margin: 0px;
  padding: 0px;
  color: rgb(33, 42, 47);
}
.he-fashion-product-info {
  display: flex;
  align-items: center;
  gap: 10px;
}

.he-fashion-product-info i {
  width: 40px;
}
.he-fasion-product-buttons-wrap-bottom {
  display: none;
}

@media (max-width: 767px) {
  .he-fashion-tabs-wrap .tab button {
    padding: 14px 20px;
    font-size: 14px;
  }
  .he-fashion-tabs-row {
    padding: 30px 0px 72px;
  }
  .he-fashion-tabs-wrap > h3 {
    font-size: 25px;
    line-height: normal;
  }
  .he-fashion-panel {
    overflow-x: scroll;
    padding: 20px;
  }
  .he-fashion-tabs-wrap .tab::-webkit-scrollbar {
    display: none;
  }
  .he-fashion-tabs-wrap .tab {
    overflow-x: scroll;
    white-space: pre;
  }
  .he-fasion-product-buttons-wrap-bottom {
    display: grid;
    gap:10px;
    padding-top:20px;
  }
  .he-fasion-product-buttons-wrap-top {
    display: none !important;
  }
  .he-fasion-product-buttons-wrap-bottom a {
    width:100%;
    font-size:12px;
  }
}

@media (max-width: 480px) {
  .he-fashion-tabs-wrap .tab {
    justify-content: flex-start;
  }
}

{% endstyle %}
{% assign s = section.settings %}

<section
  class="he-fashion-tabs-section"
  id="he-fashion-tabs-section">
  <div
    class="he-fashion-tabs-row">
    <div
      class="he-container">
      <div
        class="he-fashion-tabs-wrap">
        <h3>{{ s.section_title }}</h3>
        {% render 'he-fashion-tabs', blocks: section.blocks %}
      </div>
    </div>
  </div>
</section>

<script>
function openTab(evt, cityName) {
  let i, tabcontent, tablinks;
  tabcontent = document.querySelectorAll(".he-fashion-tabs-wrap .tabcontent");
  for (i = 0; i < tabcontent.length; i++) {
    tabcontent[i].style.display = "none";
  }
  tablinks = document.querySelectorAll(".he-fashion-tabs-wrap .tablinks");
  for (i = 0; i < tablinks.length; i++) {
    tablinks[i].className = tablinks[i].className.replace(" active", "");
  }
  document.getElementById(cityName).style.display = "block";
  evt.currentTarget.className += " active";
}
</script>

