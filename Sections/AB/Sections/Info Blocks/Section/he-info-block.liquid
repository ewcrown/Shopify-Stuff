{% style %}
.he-info-block-row {
    padding: 50px 0px;
}
.he-info-block-wrap h3 {
    margin-bottom: 20px;
    font-size:32px;
    line-height: normal;
}
.he-info-block-wrap p {
    margin-bottom: 30px;
    font-size:16px;
}
.he-info-block-wrap {
    text-align: center;
}
.he-info-two-buttons-wrap {
    display: flex;
    gap:25px;
    justify-content: center;
}

@media(max-width:767px){
    .he-info-block-row {
        padding:20px 0px;
    }
    .he-info-block-wrap h3 {
        font-size:25px;
    }
}
{% endstyle %}

{% assign s = section.settings %}

<section
  class="he-info-block-section"
  id="he-info-block-section">
  <div
    class="he-info-block-row">
    <div
      class="he-container">
      <div
        class="he-info-block-wrap">
        <h3>{{ s.title }}</h3>
        <p>{{ s.paragraph }}</p>
        <div
          class="he-info-two-buttons-wrap">
          {% render 'he-two-button', btn1: s.button1, btn1_url: s.button1_url, btn2: s.button2, btn1_url: s.button2_url, class: "he-secondary-button" %}
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Info Block",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title Here",
        "default": "Summer Trips Need Super Packable Shoes"
      },
      {
        "type": "text",
        "id": "paragraph",
        "label": "Paragraph Here",
        "default": "Weâ€™ve got your 10,000 steps covered, easy."
      },
      {
        "type": "text",
        "id": "button1",
        "label": "Button 1 Here",
        "default": "Show Men"
      },
      {
        "type": "url",
        "id": "button1_url",
        "label": "Button 1 Url"
      }, {
        "type": "text",
        "id": "button2",
        "label": "Button 2 Here",
        "default": "Show Women"
      }, {
        "type": "url",
        "id": "button2_url",
        "label": "Button 2 Url"
      }
    ],
    "presets": [
      {
        "name": "Info Blocks"
      }
    ]
  }
{% endschema %}